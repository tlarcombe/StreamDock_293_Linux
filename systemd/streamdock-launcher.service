[Unit]
Description=Stream Dock Launcher
Documentation=https://github.com/MiraboxSpace/StreamDock-Plugin-SDK
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/python3 /home/%i/projects/StreamDock/bin/streamdock_launcher.py
Restart=on-failure
RestartSec=5
StandardOutput=journal
StandardError=journal

# Security hardening
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=default.target
